{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "{{ .UserName }}@",
          "foreground": "#0fae53",
          "type": "text",
          "style": "powerline"
        },
        {
          "template": "{{ .HostName }} ",
          "foreground": "#0fae53",
          "type": "text",
          "style": "powerline"
        },
        {
          "template": "-> ",
          "foreground": "#cccccc",
          "type": "text",
          "style": "powerline"
        },
        {
          "template": "{{ .PWD }} ",
          "foreground": "#408dda",
          "type": "path",
          "style": "powerline"
        },
        {
          "template": "(",
          "foreground": "#11a8cd",
          "type": "git",
          "style": "powerline"
        },
        {
          "template": "{{ .HEAD }}",
          "foreground": "#f35e55",
          "type": "git",
          "style": "powerline",
          "properties": {
            "branch_icon": ""
          }
        },
        {
          "template": ") ",
          "foreground": "#11a8cd",
          "type": "git",
          "style": "powerline"
        },
        {
          "template": "$ ",
          "foreground": "#cccccc",
          "type": "text",
          "style": "powerline"
        }
      ]
    }
  ],
  "version": 3
}
