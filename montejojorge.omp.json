{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "powerline",
          "foreground": "#0fae53",
          "template": "@{{ .UserName }} "
        },
        {
          "type": "text",
          "style": "powerline",
          "foreground": "#cccccc",
          "template": "-> "
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#408dda",
          "template": "{{ .PWD }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#11a8cd",
          "template": "("
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#f35e55",
          "properties": {
            "branch_icon": ""
          },
          "template": "{{ .HEAD }}"
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#11a8cd",
          "template": ") "
        },
        {
          "type": "text",
          "style": "powerline",
          "foreground": "#cccccc",
          "template": "$ "
        }
      ]
    }
  ],
  "version": 2
}